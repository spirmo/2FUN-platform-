from docx import Document
from docx.shared import Pt

# ایجاد سند ورد
doc = Document()

# عنوان پروژه
doc.add_heading('2FUN Platform', 0)

# توضیح فارسی پروژه
doc.add_paragraph(
    'پروژه توفان | بستری ترکیبی از خدمات فیزیکی و دیجیتال برای پاسخ آنی به نیازهای انسانی، '
    'بدون تمرکز بر پول و با تکیه بر مشارکت و توکن 2FUN.'
)

doc.add_heading('هدف پروژه', level=1)
doc.add_paragraph(
    'ایجاد یک اکوسیستم خدماتی مبتنی بر فناوری، همکاری انسانی و اقتصاد توکنیزه‌شده برای ارائه‌ی خدمات فوری و مشارکتی.'
)

doc.add_heading('بخش‌های اصلی', level=1)
doc.add_paragraph(
    '- خدمات فیزیکی: ارسال کالا، ابزار، خدمات فنی و حتی جهانگردی\n'
    '- فضای دیجیتال: خدمات آنلاین، متاورس، آموزش، تبلیغات\n'
    '- اقتصاد پروژه: گردش توکن 2FUN به‌عنوان ابزار تعامل و پاداش\n'
    '- کامیونیتی: مشارکت عمومی در توسعه، تبلیغ، اجرا و حکمرانی\n'
    '- بازی و گیمیفیکیشن: ایجاد انگیزه و تعامل جذاب با کاربران'
)

doc.add_heading('منابع ازبین‌رونده', level=1)
doc.add_paragraph(
    'در این پروژه از منابع ازبین‌رونده نیز به‌صورت بهینه استفاده می‌شود، بدون اشاره مستقیم به نوع آن‌ها.'
)

doc.add_heading('توکن و اقتصاد پروژه', level=1)
doc.add_paragraph(
    'توکن اصلی پروژه 2FUNC است که هر 2FUNC معادل 100 عدد 2SHIR یا 200 عدد SHIR است.\n'
    'هدف بلندمدت اول (۱۰ ساله) پروژه این است که ارزش هر SHIR به 0.23364 گرم نقره برسد.\n'
    'در نتیجه، ارزش هر 2SHIR معادل 0.46728 گرم نقره خواهد بود و هدف آن است که ارزش هر 2FUNC '
    'به 46.728 گرم نقره برسد.'
)

doc.add_heading('اسطوره‌های ایرانی و داستان', level=1)
doc.add_paragraph(
    'پروژه توفان الهام‌گرفته از اسطوره‌های ایرانی است که در گذشته اقتصادی پویا و قوی در ایران بنا نهادند. '
    'داستان بازی از همین بستر فرهنگی و تاریخی آغاز می‌شود.'
)

doc.add_heading('مسیر توسعه', level=1)
doc.add_paragraph(
    '- MVP: ربات تلگرام + پایگاه داده + توکن اولیه\n'
    '- مرحله دوم: گیمیفیکیشن + متاورس\n'
    '- مرحله سوم: گسترش خدمات فیزیکی در سطح شهری/ملی'
)

doc.add_heading('لایسنس', level=1)
doc.add_paragraph('پیشنهاد: MIT یا GPL (در حال بررسی)')

doc.add_heading('ارتباط', level=1)
doc.add_paragraph('در نسخه‌های بعدی، لینک‌های ارتباطی و کامیونیتی اضافه خواهند شد.')

# ذخیره فایل
file_path = "/mnt/data/2FUN_Platform_Project.docx"
doc.save(file_path)

